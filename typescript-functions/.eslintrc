{
  "rules": {
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/typedef": [
      "error",
      {
        "variableDeclaration": true,
        "variableDeclarationIgnoreFunction": true
      }
    ],
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "Function": false
        }
      }
    ]
  }
}
